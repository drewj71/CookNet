@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar">
    <div class="container-fluid">
        <a class="navbar-brand" href="">CookNet</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="recipes">
                <span class="bi bi-basket2-fill" aria-hidden="true"></span> All Recipes
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="ingredient-insights">
                <span class="bi bi-egg-fried" aria-hidden="true"></span> Ingredient Insights
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="create-recipe">
                        <span class="bi bi-patch-plus-fill" aria-hidden="true"></span> Create Recipe
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@($"/cookbooks/{context.User.Identity?.Name}")">
                        <span class="bi bi-journal-bookmark-fill" aria-hidden="true"></span> Cookbooks
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="about">
                <span class="bi bi-info-square-fill" aria-hidden="true"></span> About
            </NavLink>
        </div>
    </nav>
</div>
@using MudBlazor

<MudDialog>
    <DialogContent>
        <p>@Message</p>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Confirm">Confirm</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; }

    [Parameter] public string Message { get; set; } = "Are you sure you want to proceed?";
    [Parameter] public int? CookbookID { get; set; }

    void Confirm()
    {
        if (CookbookID != null)
        {
            MudDialog.Close(DialogResult.Ok(CookbookID));
        }
        else
        {
            MudDialog.Close(DialogResult.Ok(true));
        }
    }

    void Cancel()
    {
        MudDialog.Cancel();
    }
}
